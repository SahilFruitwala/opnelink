---
import "../styles/globals.css";
import { profile, socialLinks } from "../config/openlink";
import PosthogProvider from "../components/PosthogProvider";

interface Props {
  title?: string;
  description?: string;
}

const {
  title = "OpenLink â€“ Minimal link page",
  description = "OpenLink is a fast, minimal link-in-bio page with UTM and PostHog tracking built-in.",
} = Astro.props;

const siteUrl = "https://openlink.sahilfruitwala.com";
const name = profile.name;
const role = profile.role;
const bio = profile.bio;
const avatarUrl = profile.avatarUrl;

const structuredData = JSON.stringify({
  "@context": "https://schema.org",
  "@type": "Person",
  name: name,
  url: siteUrl,
  jobTitle: role,
  description: bio,
  image: avatarUrl,
  sameAs: socialLinks.map((link) => link.href),
});
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.ico" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
    <meta name="description" content={description} />
    <meta
      name="keywords"
      content="OpenLink, link in bio, digital identity, social media links, minimal link page, Sahil Fruitwala"
    />
    <meta name="author" content="Sahil Fruitwala" />
    <meta name="robots" content="index, follow" />
    <meta name="theme-color" content="#fdfdfb" />
    <link rel="canonical" href={siteUrl} />

    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={siteUrl} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={`${siteUrl}/og-image.png`} />
    <meta property="og:site_name" content="OpenLink" />
    <meta property="og:locale" content="en_US" />

    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={siteUrl} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={`${siteUrl}/og-image.png`} />
    <meta property="twitter:creator" content="@SahilBeingSahil" />

    <script is:inline>
      const getTheme = () => {
        const stored = localStorage.getItem("theme");
        if (stored) return stored;
        return window.matchMedia("(prefers-color-scheme: dark)").matches
          ? "dark"
          : "light";
      };

      if (getTheme() === "dark") {
        document.documentElement.classList.add("dark");
      } else {
        document.documentElement.classList.remove("dark");
      }
    </script>
    <script is:inline type="application/ld+json" set:html={structuredData} />
  </head>
  <body class="antialiased">
    <PosthogProvider client:load>
      <slot />
    </PosthogProvider>
  </body>
</html>

<style is:global>
  /* Any additional overrides can go here */
</style>
